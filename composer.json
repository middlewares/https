{
    "name": "middlewares/https",
    "type": "library",
    "description": "Middleware to redirect to https and adds the Strict-Transport-Security header",
    "license": "MIT",
    "keywords": [
        "psr-7",
        "psr-15",
        "middleware",
        "https",
        "Strict-Transport-Security",
        "http"
    ],
    "homepage": "https://github.com/middlewares/https",
    "support": {
        "issues": "https://github.com/middlewares/https/issues"
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "http-interop/http-middleware": "^0.3",
        "middlewares/utils": "~0.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "zendframework/zend-diactoros": "^1.3",
        "friendsofphp/php-cs-fixer": "^1.12",
        "squizlabs/php_codesniffer": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "Middlewares\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Middlewares\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpcs"
        ],
        "cs-fix": "php-cs-fixer fix . --fixers=-psr0"
    }
}
